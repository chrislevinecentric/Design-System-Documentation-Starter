---
import { SITE } from '../../consts';
import SkipToContent from './SkipToContent.astro';
import SidebarToggle from './SidebarToggle';
import ThemeToggleButton from '../RightSidebar/ThemeToggleButton';
---

<header>
	<SkipToContent />
	<nav class="nav-wrapper" title="Top Navigation">
		<div class="menu-toggle">
			<SidebarToggle client:idle />
		</div>
		<div class="logo flex">
			<a>
				<h1>{SITE.title ?? 'Design System Documentation '}</h1>
			</a>
		</div>
		<div style="flex-grow: 1;">
			<div style="margin: 0px 2rem 0px 0px; text-align: right;">
				<ThemeToggleButton client:visible />
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		z-index: 11;
		height: var(--theme-navbar-height);
		width: 100%;
		background-color: var(--theme-navbar-bg);
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		position: relative;
		top: 0;
		
	}

	.logo {
		flex: 3;
		display: flex;
		overflow: hidden;
		font-size: 1.2rem;
		flex-shrink: 0;
		font-weight: 600;
		line-height: 1;
		color: pink;
		gap: 0.25em;
		
	}

	.logo a {
		display: flex;
		padding: 0.5em 0.25em;
		margin: -0.5em -0.25em;
		text-decoration: none;
		font-weight: bold;
	}

	.logo a {
		transition: color 100ms ease-out;
		color: var(--theme-text);
	}

	.logo a:hover,
	.logo a:focus {
		color: var(--theme-text-accent);
	}

	.logo h1 {
		font: inherit;
		color: inherit;
	}

	.nav-wrapper {
		display: flex;
		gap: inherit;
		width: 100%;
		align-items: baseline;
	}

	@media (min-width: 50em) {
		header {
			position: static;
			padding: 0rem 0rem;
		}

		.logo {
			width: auto;
			margin: 0;
			z-index: 0;
			padding-left: 2rem
		}

		.logo h1 {
			display: initial;
		}

		.menu-toggle {
			display: none;
		}
	}
</style>
